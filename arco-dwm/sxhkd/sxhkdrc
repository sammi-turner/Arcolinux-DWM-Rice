# Browser
alt + b
    firefox

# Logout
F12
    archlinux-logout

# Rofi theme selector
super + shift + t
    rofi-theme-selector

# Pavucontrol
alt + v
    pavucontrol

# Termite
alt + Return
    termite

# Xkill
super + Escape
    xkill

# File-Manager
alt + f
	thunar

# Dmenu
alt + d
	dmenu_run -i -nb '#191919' -nf '#fea63c' -sb '#fea63c' -sf '#191919' -fn 'NotoMonoRegular:bold:pixelsize=14'

# Rofi
alt + shift + d
    ~/.config/arco-dwm/launcher/launcher.sh

# Reload sxhkd:
alt + shift + s
	pkill -USR1 -x sxhkd

# Arcolinux-welcome-app
alt + w
     arcolinux-welcome-app

# Nitrogen
alt + n
     nitrogen

# Pamac-manager
alt + p
    pamac-manager

# Scrot
Print
    scrot 'ArcoLinux-%Y-%m-%d-%s_screenshot_$wx$h.jpg' -e 'mv $f $$(xdg-user-dir PICTURES)'

# Flameshot
shift + Print
     flameshot gui

# Raises volume
XF86AudioRaiseVolume
    amixer -D pulse set Master 10%+

# Lowers volume
XF86AudioLowerVolume
    amixer -D pulse set Master 10%-

# Mute
XF86AudioMute
    amixer -D pulse set Master 1+ toggle

# PLAY
XF86AudioPlay
    playerctl play-pause

# Next
XF86AudioNext
    playerctl next

# Previous
XF86AudioPrev
    playerctl previous

# Stop
XF86AudioStop
    playerctl stop

# Brightness up
XF86MonBrightnessUp
    xbacklight -inc 10

#Brightness down
XF86MonBrightnessDown
    xbacklight -dec 10

# Picom Toggle
alt + shift + p
    ~/.config/arco-dwm/scripts/picom-toggle.sh
